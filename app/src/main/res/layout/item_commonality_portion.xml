<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:id="@+id/zhiding"
        android:src="@mipmap/zhiding_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabiaodizhi"
        android:layout_toRightOf="@id/zhiding"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:text="中国青年网"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinglun"
        android:layout_toRightOf="@id/fabiaodizhi"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:text="300评论"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shijian"
        android:layout_toRightOf="@id/pinglun"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:text="3小时前"/>


    <ImageView
        android:src="@mipmap/add_textpage_normal"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/shanchu"/>



</RelativeLayout>
